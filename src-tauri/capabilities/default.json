{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read",
    "fs:allow-read-dir",
    "fs:allow-stat",
    "fs:allow-exists",
    "fs:allow-watch",
    {
      "identifier": "fs:scope",
      "allow": ["**/*"]
    },
    "store:default"
  ]
}
